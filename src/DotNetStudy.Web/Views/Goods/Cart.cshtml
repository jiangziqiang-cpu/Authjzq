
@{
    ViewData["Title"] = "Cart";
}
@model IEnumerable<DotNetStudy.Web.Models.Cart>
<h1>Cart</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">订单Id</th>
            <th scope="col">商品Id</th>           
            <th scope="col">商品名</th>
            <th scope="col">价格</th>
            <th scope="col">数量</th>
            <th scope="col">用户名</th>
            <th scope="col">用户ID</th>

        </tr>
    </thead>
    <tbody>
        @{
            foreach (var item in Model)
            {
                <tr>
                    <td scope="row">@item.Id</td>
                    <td>@item.ProductId</td>
                    <td>@item.ProductName</td>
                    <td>@item.UnitPrice</td>
                    <td>@item.Quantity</td>
                    <td>@item.UserName</td>
                    <td>@item.UserId</td>

                </tr>
            }
        }
    </tbody>
</table>

<div class="float-right"><a>去提交订单</a></div>
